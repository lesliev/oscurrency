<%= bootstrap_form_for Topic.new, :url => forum_topics_path(@forum), :html => {:id => 'new_topic', :class => 'form-inline'} do |f| %>
    <%= f.text_field :name, :placeholder => t('forums.show.add_new_topic'), :label => :none %>
    <%= f.submit t('button_submit') %>
<% end %>
